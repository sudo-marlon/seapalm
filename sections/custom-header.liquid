<section class="custom-header">
  <div class="header-container">
    <div class="header-left">
      <nav class="nav-menu">
        {% for link in linklists['main-menu'].links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </nav>
    </div>

    <div class="header-center">
      <div class="logo">
        <a href="{{ shop.url }}">
          <img src="{{ 'your-logo.png' | asset_url }}" alt="{{ shop.name }}">
        </a>
      </div>
    </div>

    <div class="header-right">
      <a href="/search"><span>🔍</span></a>
      <a href="/account"><span>👤</span></a>
      <a href="/cart"><span>🛒</span></a>
    </div>
  </div>
</section>

.custom-header { width: 100%; background-color: #ffffff; /* Match Baobabstore’s background */ padding: 10px 0;
box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); }

.header-container { display: flex; justify-content: space-between; align-items: center; max-width: 1200px; margin: 0
auto; padding: 0 20px; }

.nav-menu { display: flex; gap: 20px; }

.nav-menu a { text-decoration: none; color: #333; font-size: 16px; font-weight: bold; }

.logo img { max-height: 50px; /* Adjust according to Baobabstore */ }

.header-right { display: flex; gap: 15px; }
