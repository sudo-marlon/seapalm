<header class="header-04">
  <div class="wrapper-header">
    <div class="container">
      <div class="wrapper-header-bt">
        <!-- LOGO -->
        <div class="logo-wrapper">
          <a href="{{ routes.root_url }}" class="logo">
            {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
            {% else %}
              {{ shop.name }}
            {% endif %}
          </a>
        </div>

        <!-- NAVIGATION (Aligned to Right) -->
        <div class="wrapper-navigation" style="display: flex; justify-content: flex-end; width: 100%;">
          <nav class="nav-bar" role="navigation">
            {% render 'site-nav' %}
          </nav>
        </div>

        <!-- RIGHT HEADER (Icons - Search, Account, Cart) -->
        <div
          class="right-header header-items"
          style="display: flex; align-items: center; justify-content: flex-end; gap: 15px;"
        >
          <!-- Search Icon -->
          <div class="search-icon">
            <a href="/search" title="Search">
              {% render 'icon-search' %}
            </a>
          </div>

          <!-- Account Icon -->
          <div class="account-icon">
            <a href="/account" title="Account">
              {% render 'icon-account' %}
            </a>
          </div>

          <!-- Cart Icon -->
          <div class="cart-icon">
            <a href="/cart" title="Cart">
              {% render 'icon-cart' %}
              <span class="cartCount" data-cart-count>
                {{ cart.item_count }}
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
