<header class="header-04">
  <div class="wrapper-header">
    <div class="container">
      <div class="wrapper-header-bt">
        <!-- LOGO (Centered) -->
        <div class="logo-wrapper">
          <a href="{{ routes.root_url }}" class="logo">
            {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
            {% else %}
              {{ shop.name }}
            {% endif %}
          </a>
        </div>

        <!-- NAVIGATION (Now Visible) -->
        <div class="wrapper-navigation">
          <nav class="nav-bar">
            {% if linklists['main-menu'].links.size > 0 %}
              <ul class="menu">
                {% for link in linklists['main-menu'].links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </nav>
        </div>

        <!-- RIGHT HEADER (Fixed Icons) -->
        <div class="right-header header-items">
          <!-- Search Icon -->
          <div class="search-icon">
            <a href="/search" title="Search">ğŸ”</a>
          </div>

          <!-- Account Icon (Fixed) -->
          <div class="account-icon">
            <a href="/account" title="Account">ğŸ‘¤</a>
            <!-- Using Emoji as Placeholder -->
          </div>

          <!-- Cart Icon -->
          <div class="cart-icon">
            <a href="/cart" title="Cart">ğŸ›’</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
