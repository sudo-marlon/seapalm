<header class="header-04">
  <div class="wrapper-header">
    <div class="container">
      <div class="wrapper-header-bt">
        <!-- LOGO (Left) -->
        <div class="logo-wrapper">
          <a href="{{ routes.root_url }}" class="logo">
            {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
            {% else %}
              {{ shop.name }}
            {% endif %}
          </a>
        </div>

        <!-- NAVIGATION MENU (Moved to Right) -->
        <div class="wrapper-navigation">
          <nav class="nav-bar">
            {% if linklists['main-menu'].links.size > 0 %}
              <ul class="menu">
                <li><a href="/collections/new">NEW</a></li>
                <li><a href="/collections/clothing">CLOTHING</a></li>
                <li><a href="/collections/dresses">DRESSES</a></li>
                <li><a href="/collections/swim">SWIM</a></li>
                <li><a href="/collections/accessories">ACCESSORIES</a></li>
                <li><a href="/collections">COLLECTIONS</a></li>
                <li><a href="/pages/explore">EXPLORE</a></li>
              </ul>
            {% endif %}
          </nav>
        </div>

        <!-- RIGHT HEADER (Search, Account, Cart) -->
        <div class="right-header">
          <a href="/search" class="icon">üîç</a>
          <a href="/account" class="icon">üë§</a>
          <a href="/cart" class="icon">üõí</a>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
