{% if section.blocks.size > 0 %}
  {%- liquid
    assign autoplay = section.settings.autoplay
    assign autoplaySpeed = section.settings.slideshow_speed
    assign fade = section.settings.slideshow_transition
    assign dots = section.settings.dots
  -%}

  <section
    class="home-slideshow full-width"
    id="slideshow-{{ section.id }}"
    data-loader-script="{{ 'halo.slide-show.js' | asset_url }}"
  >
    <div class="container-fluid">
      <div
        class="slideshow"
        data-autoplay="{{ autoplay }}"
        data-autoplay-speed="{{ autoplaySpeed }}"
        data-fade="{{ fade }}"
        data-arrows="true"
      >
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="slide-item" id="block-{{ block.id }}">
              {% assign preview_img = block.settings.image_slide %}
              <div
                class="slide-bg"
                style="background-image: url({{ preview_img | img_url: 'master' }}); background-size: cover; background-position: center; height: 100vh;"
              >
                <div class="slide-content text-center">
                  {% if block.settings.heading != blank %}
                    <h2 class="slide-heading">{{ block.settings.heading }}</h2>
                  {% endif %}
                  {% if block.settings['slide-des'] != blank %}
                    <p class="slide-text">{{ block.settings['slide-des'] }}</p>
                  {% endif %}
                  {% if block.settings.button_slide != blank %}
                    <a href="{{ block.settings.link }}" class="btn btn-primary">{{ block.settings.button_slide }}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
<!-- âœ… Ensure the IF block closes here, before schema -->

<style>
  .home-slideshow.full-width {
      width: 100%;
  }
  .slide-bg {
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      text-align: center;
      padding: 20px;
  }
  .slide-content {
      max-width: 800px;
      background: rgba(0, 0, 0, 0.5);
      padding: 20px;
      border-radius: 10px;
  }
  .btn-primary {
      background-color: #ff7f50;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
  }
</style>

{% schema %}
{
    "name": "Slideshow",
    "settings": [
        {
            "type": "checkbox",
            "id": "autoplay",
            "label": "Enable Autoplay",
            "default": true
        },
        {
            "type": "select",
            "id": "slideshow_speed",
            "label": "Slide Change Speed",
            "options": [
                { "value": "5000", "label": "5 seconds" },
                { "value": "7000", "label": "7 seconds" },
                { "value": "10000", "label": "10 seconds" }
            ],
            "default": "5000"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_slide",
                    "label": "Slide Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "slide-des",
                    "label": "Description"
                },
                {
                    "type": "text",
                    "id": "button_slide",
                    "label": "Button Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Slideshow",
            "category": "Image"
        }
    ]
}
{% endschema %}
