<div class="announcement-bar">
  <div class="announcement-slider">
    {% for block in section.blocks %}
      <div class="announcement-item">
        {{ block.settings.announcement_text }}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .announcement-bar {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    text-align: center;
    overflow: hidden;
    position: relative;
    padding: 10px 0;
    font-size: 16px;
  }
  .announcement-slider {
    display: flex;
  }
  .announcement-item {
    flex: 0 0 100%;
    padding: 10px 20px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    $('.announcement-slider').slick({
      infinite: true,
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: {{ section.settings.slide_duration }} * 1000,
      arrows: false,
      dots: false,
      pauseOnHover: true,
      draggable: true,
      swipe: true,
      touchMove: true,
    });
  });
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "number",
      "id": "slide_duration",
      "label": "Slide Duration (seconds)",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "announcement_text",
          "label": "Announcement Text",
          "default": "Welcome to our store!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
